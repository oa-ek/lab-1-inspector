@model ComplaintVM

<form method="post" enctype="multipart/form-data">
	<!--<input asp-for="File" hidden />-->
	<input asp-for="Complaint.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">@(Model.Complaint.Id!=0?"Update" : "Create")</h2>
			<hr/>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Complaint.UserName" class="p-0">User Name</label>
			<input asp-for="Complaint.UserName" class="form-control" />
			<span asp-validation-for="Complaint.UserName" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Complaint.OrganizationId" class="p-0"></label>
			<select asp-for="Complaint.OrganizationId" asp-items="@Model.OrganizationList" class="form-select">
				<option disabled selected>--SelectOrganization--</option>
			</select>
			<span asp-validation-for="Complaint.OrganizationId" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Complaint.Description" class="p-0">Description</label>
			<input asp-for="Complaint.Description" class="form-control" />
			<span asp-validation-for="Complaint.Description" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Complaint.File" class="p-0">File</label>
			<input type="file" name="file" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				@if(Model.Complaint.Id != 0)
				{
					<button type="submit" class="btn btn-primary form-control">Update</button>
				}
				else
				{
					<button type="submit" class="btn btn-primary form-control">Create</button>
				}
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Complaint" asp-action="Index" class="btn btn-secondary border form-control">
				Back to List
			</a>
			</div>			
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}