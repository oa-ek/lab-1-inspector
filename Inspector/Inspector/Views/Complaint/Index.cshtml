@model List<Complaint>

<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h2 class="text-primary">
				Complaint List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Complaint" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-lg"></i> Create Complaint
				</a>
			
		</div>
	</div>
	<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Description
			</th>
			<th>
				OrganizationId
			</th>
			<th>
				UserName
			</th>
			<th>
				Status
			</th>
			<th>
				Button
			</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.Id
					</td>
					<td>
						@Html.Raw(obj.Description)
					</td>
					<td>
						@obj.Organization.Name
					</td>
					<td>
						@obj.UserName
					</td>
					<td>
						@obj.Status
					</td>
					<td>
						<a asp-controller="Complaint" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-danger">
							<i class="bi bi-pencil-square"></i> Edit
						</a>

						<a asp-controller="Complaint" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-warning">
							<i class="bi bi-trash3"></i> Delete
						</a>
						
					</td>
				</tr>
			}
		
	</tbody>
</table>
</div>