@model Complaint

<form action="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="UserName">Name</label>
			<input type="text" name="name"><br>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="OrganizationId">OrganizationId</label>
			<input type="text" name="organizationId"><br>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Description">Description</label>
			<input type="text" name="organizationId"><br>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Complaint" asp-action="Index" class="btn btn-secondary border form-control">
					Back to List
				</a>
			</div>
		</div>
	</div>
</form>